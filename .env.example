# Backend Environment Variables
# Copy this file to crudbackend/.env and fill in your values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/employee_management
# For MongoDB Atlas, use:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/employee_management

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# Server Configuration
PORT=8000
NODE_ENV=development

# Example values:
# JWT_SECRET=myapp_jwt_secret_key_2024_employee_management_system
# MONGODB_URI=mongodb+srv://admin:password123@cluster0.mongodb.net/employee_management